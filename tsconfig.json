{
  "compilerOptions": {
    "moduleResolution": "node",
    "baseUrl": "./src",
    "paths": {
      "@configs/*": ["configs/*"],
      "@constants/*": ["constants/*"],
      "@entities/*": ["entities/*"],
      "@utils/*": ["utils/*"],
      "@shared/*": ["api/shared/*"]
    },
    "allowJs": false,
    "noEmit": true,
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false,
    "forceConsistentCasingInFileNames": false
  },
  "exclude": ["node_modules"],
  "include": ["./src"]
}
